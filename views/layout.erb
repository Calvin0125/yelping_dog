    <div class="contact">
      <h2 class="contact">Contact</h2>
      <dl>
        <dt>Phone: </dt>
        <dd>123-456-7890</dd>
      </dl>
    </div>
    <div class="location">
      <h2 class="address">Address</h2>
      <p class="address">123 Main Street,</p>
